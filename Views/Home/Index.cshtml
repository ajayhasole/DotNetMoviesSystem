@model IEnumerable<Movies.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Theater Website</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, Helvetica, sans-serif;
            overflow-x: hidden; /* Prevent horizontal scrollbar */
        }

        #video-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            object-fit: cover; /* Ensures the video covers the entire screen */
        }

        .content {
            position: relative;
            z-index: 1;
            text-align: center;
            color: #ffffff; /* Text color */
            padding: 20px;
        }

        .card {
            width: 18rem;
            margin-right: 10px;
            margin-bottom: 20px;
            transition: transform 0.3s ease;
            background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent background for better readability */
            border: none;
        }

            .card:hover {
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <!-- Background Video -->
    <video id="video-background" autoplay muted loop>
        <source src="ajaybg.mp4" type="video/mp4"> <!-- Replace with the actual URL to your video file -->
        Your browser does not support the video tag.
    </video>

    <!-- Content Overlay -->
    <div class="content">
        <div class="container text-center">

            <div class="row justify-content-center">
                @foreach (var item in Model)
                {
                    <div class="card">
                        <img src="@Html.DisplayFor(modelItem => item.PosterUrl)" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Actors)</p>
                            <a href="#" class="btn btn-primary">Booking</a>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>

    <!-- Bootstrap JavaScript and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>