@model Movies.Models.User1

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<style>
   
    body {
        background-image: url('https://e1.pxfuel.com/desktop-wallpaper/574/383/desktop-wallpaper-movie-poster-mix-of-movies.jpg'); /* Replace with your movie-themed background image path */
        background-size: cover;
        background-repeat: no-repeat;
    }

    .login-container {
        background-color: rgba(255, 255, 255, 0.8); 
        padding: 20px;
        border-radius: 10px;
        margin-top: 100px; 
    }

    .login-form {
        max-width: 400px; 
        margin: 0 auto;
    }

    .login-title {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    .login-link {
        color: #007bff;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="login-container">
                <h1 class="login-title">User Login</h1>
                <hr />
                <form asp-action="Login" class="login-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </form>
                <div class="text-center">
                    <a asp-action="Create" class="login-link">Sign Up</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
